---
import Layout from '../layouts/Layout.astro';
import {Mail, Github, Linkedin, Instagram } from 'lucide-astro'

const name = "Bennett Logan";
const title = "Developer";
const description = "There are no large actions, only the culmination of numerous small actions";
---

<Layout title={`${name} - Portfolio`} description={description}>
	<!-- Navigation -->
	<nav class="nav">
		<div class="nav-container">
			<a href="/" class="logo">{name}</a>
			<div class="nav-links">
				<a href="#about">About</a>
				<a href="/projects/">Projects</a>
				<a href="/contact">Contact</a>
			</div>
		</div>
	</nav>

	<!-- Hero Section -->
	<section class="hero" id="home">
		<div class="container">
			<div class="hero-content">
				<h1 class="typing-text">{name}</h1>
				<p class="subtitle">{title}</p>
				<p class="description">{description}</p>
				<div class="cta-buttons">
					<a href="#projects" class="btn btn-primary">View Projects</a>
					<a href="#contact" class="btn btn-secondary">Get in Touch</a>
				</div>
			</div>
		</div>
	</section>

	<!-- About Section -->
	<section class="section" id="about">
		<div class="container">
			<h2 class="section-title">
				About
			</h2>
			<div class="about-content">
				<p>
					Hello! I am a developer who is currently going to college in
					Montana, the last place you would expect a developer to live.
				</p>
				<p>
					I love to program, but I also love photography. Being in Montana, I have no
					shortage of subjects to photograph. My dream is someday combine the two somehow, but
					that has yet to be discovered.
				</p>
				<p>
					When I'm not coding or photographing, I love to spend my time outside.
					I backpack often, build bush craft shelters, and even lived in a tent for a job!
					I even have a Youtube channel dedicated to outdoor things!
					Check out my channel <a href="https://www.youtube.com/@Everyday_Outdoors">here!</a>
				</p>
				<div class="skills">
					<h3>Skills</h3>
					<div class="skill-tags">
						<span class="tag">Java</span>
						<span class="tag">Python</span>
						<span class="tag">C++</span>
						<span class="tag">C</span>
						<span class="tag">Kotlin</span>
						<span class="tag">Swift</span>
						<span class="tag">HTML</span>
						<span class="tag">CSS</span>
						<span class="tag">Git</span>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Projects Section -->
	<section class="section" id="projects">
		<div class="container">
			<h2 class="section-title">
				Projects
			</h2>
			<div class="projects-grid">
				<article class="project-card" onclick="window.location.href='#'">
					<div class="project-header">
						<h3>CatScript Compiler</h3>
						<span class="project-year">2025</span>
					</div>
					<p class="project-description">
						A recursive-descent compiler for the low-functionality
						language CatScript.
					</p>
					<p class="project-description">
						This was my capstone project to graduate
						from college!
					</p>
					<div class="project-tech">
						<span class="tech-tag">Java</span>
					</div>
					<div class="project-links">
						<a href="#" class="project-link">View Project →</a>
					</div>
				</article>

				<article class="project-card" onclick="window.location.href='#'">
					<div class="project-header">
						<h3>Photography Website</h3>
						<span class="project-year">2025</span>
					</div>
					<p class="project-description">
						A creative portfolio showcasing photography and design work with
						smooth animations and transitions.
					</p>
					<div class="project-tech">
						<span class="tech-tag">JavaScript</span>
						<span class="tech-tag">HTML</span>
						<span class="tech-tag">CSS</span>
					</div>
					<div class="project-links">
						<a href="#" class="project-link">View Project →</a>
					</div>
				</article>

				<article class="project-card" onclick="window.location.href='https://github.com/iforgotmylogin/MachineLearning'">
					<div class="project-header">
						<h3>Machine Learning Library</h3>
						<span class="project-year">2024</span>
					</div>
					<p class="project-description">
						A recreation of multiple different Scikit-learn
						libraries for machine learning.
					</p>
					<div class="project-tech">
						<span class="tech-tag">Python</span>
					</div>
					<div class="project-links">
						<a href="https://github.com/iforgotmylogin/MachineLearning" class="project-link">View Project →</a>
					</div>
				</article>

				<div class="view-all-projects">
					<a href="/projects" class="btn btn-primary">
						View All Projects →
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Footer -->
	<footer class="footer">
		<div class="container">
			<div class="footer-content">
				<p class="footer-text">© 2025 {name}. Built with Astro.</p>
				<div class="footer-links">
					<a href="mailto:bgblogan03@gmail.com" class="footer-link">
						<Mail size={18} />
					</a>
					<a href="https://github.com/iforgotmylogin" class="footer-link">
						<Github size={18} />
					</a>
					<a href="https://linkedin.com/in/ben-logan-cs/" class="footer-link">
						<Linkedin size={18} />
					</a>
					<a href="https://www.instagram.com/notbenlogan/" class="footer-link">
						<Instagram size ={18} />
					</a>
				</div>
			</div>
		</div>
	</footer>
</Layout>